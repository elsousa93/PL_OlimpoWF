                        "value": "<div id=conversas >\n    \n    \n<\/div>\n\n<script>\n    $(document).ready(function() {\n        loadConversations();\n   //     $(\"#submit\").prop(\"disabled\", true);\n     //   $(\"#submit\").remove();\n     \n     /*if('#requestParam._action#' == \"submit\" ){\n            window.location.href=\"http://192.168.0.104:8080/jw/web/userview/workflowPL/UV_PL_Geral/_/chat?para=admin-a_dpardal\";       \n     }*/\n        \n        \n        \n    });\n    function loadConversations(){\n        $(\"#conversas_ajax_subform_chatConversasSubform_painel_conversas\").find('tr').each(function(){\n            var content=\"\";\n            var id = $(this).find(\"td:nth-child(1)\").text().trim();\n            var destUser=\"\";\n            var dateModified = $(this).find(\"td:nth-child(2)\").text().trim();\n            var countNaoLida = $(this).find(\"td:nth-child(3)\").text().trim();\n            \n            if(id.trim()){\n                if(id.search('#currentUser.id#-')!=-1){\n                    destUser = id.replace('#currentUser.id#-',\"\");\n                }else if(id.search('-#currentUser.id#')!=-1){\n                    destUser = id.replace('-#currentUser.id#',\"\");\n                }\n                content='<div class=\"\" style=\"border: 1px solid black\"><a onclick=\"updateReadMessage()\"><div class=\"\" style=\"margin: 10px\"><span> ' + destUser + ' <\/span><span> -------------' + dateModified + ' <\/span><span>      Mensagens n√£o lidas:' + countNaoLida+ '<\/span><\/div><\/a><\/div>'\n                $('#conversas').append(content);\n            }\n            \n            \n            \n        });\n        \n    }\n    \n    function updateReadMessage(action){\n        $(\"#conversasChat\").attr(\"action\", \"http://192.168.0.104:8080/jw/web/userview/workflowPL/UV_PL_Geral/_/chat_conversas?_action=submit&para=admin-a_dpardal\");\n        $(\"#submit\").click();\n    }\n<\/script>\n"
